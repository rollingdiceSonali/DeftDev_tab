<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:layout_gravity="center"
    android:background="@drawable/back"
    android:layout_marginBottom="30dp"
    card_view:cardBackgroundColor="@color/card_background_theme"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_sensor_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_marginRight="6dip"
            android:background="@drawable/sensor"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <com.rollingdice.deft.android.tab.user.SwitchCompactAir
            android:id="@+id/user_sensor_toggle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn=""
            android:textOff=""
            android:background="@color/transparent"
            android:button="@drawable/device_switch"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

       <TextView
            android:id="@+id/tv_user_sensor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Example application"
            android:textStyle="bold"
            android:textColor="@color/appliance_name_header"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/user_sensor_icon"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
             />

       <TextView
            android:id="@+id/tv_user_sensor_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/appliance_name_sub_header"
            android:text="Description"
            android:textSize="12dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/user_sensor_icon"
            android:layout_below="@+id/tv_user_sensor_name"
          />

        <TextView
            android:id="@+id/tv_user_sensor_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/appliance_name_sub_header"
            android:text="Description"
            android:textSize="12dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/user_sensor_icon"
            android:layout_below="@+id/tv_user_sensor_room_name"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>
