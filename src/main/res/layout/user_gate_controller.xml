<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_gate_controller"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="6dip"
        android:id="@+id/user_gate_controller_layout">

        <ImageView
            android:id="@+id/user_gate_controller_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:padding="10dp"
            android:layout_marginRight="6dip"
            android:src="@drawable/curtain_icon" />
        <TextView
            android:id="@+id/tv_user_gate_controller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Example application"
            android:textStyle="bold"
            android:textColor="@color/appliance_name_header"
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/discrete_seek_bar_gate_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_curtain_icon"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:dsb_max="5"
            app:dsb_min="0"
            app:dsb_indicatorColor="@color/home_card_green"
            app:dsb_progressColor="@color/home_card_green"
            app:dsb_trackColor="@color/discrete_seek_bar_track" />

    </RelativeLayout>
</android.support.v7.widget.CardView>