<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center">



    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="UserManual"
        android:textStyle="bold"
        android:id="@+id/btn_user_manual"
        android:visibility="visible"
        android:textColor="@color/appliance_name_header"
        android:background="#4949D6"
        android:layout_marginLeft="25dp"
        />



    <Button

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="@color/appliance_name_header"
        android:background="#4949D6"
        android:textStyle="bold"
        android:visibility="gone"
        android:text="TroubleShooting"
        android:id="@+id/btn_troubleshooting"
        android:layout_marginLeft="25dp"
       />


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Launch Complaint"
        android:id="@+id/btn_complaint"
        android:textColor="@color/appliance_name_header"
        android:background="#4949D6"
        android:layout_marginLeft="25dp"
        />
</LinearLayout>