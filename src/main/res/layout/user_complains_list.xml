<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_complains"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:background="@drawable/back"
    card_view:cardBackgroundColor="@color/card_background_theme"
    card_view:cardCornerRadius="4dp">

  <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="40dp"
            android:text="CustomerName"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/appliance_name_header"
            android:id="@+id/customer_name"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="65dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/appliance_name_header"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ComplainsId"
            android:textSize="25dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/complains_id"
            android:layout_alignTop="@+id/customer_name"
            android:layout_toStartOf="@+id/shortdesc"
            android:layout_marginEnd="78dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/appliance_name_header"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ShortDesc"
            android:textSize="25dp"
            android:id="@+id/shortdesc"
            android:layout_marginLeft="40dp"

            android:layout_marginEnd="144dp"
            android:layout_alignTop="@+id/complains_id"
            android:layout_toStartOf="@+id/state" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/appliance_name_header"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="State"
            android:textSize="25dp"
            android:id="@+id/state"
            android:layout_marginLeft="70dp"
            android:layout_alignTop="@+id/shortdesc"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</android.support.v7.widget.CardView>