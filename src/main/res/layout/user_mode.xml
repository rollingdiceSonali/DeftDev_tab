<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_mode"
    android:layout_width="190dp"
    android:layout_height="210dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/card_background_theme"
    card_view:cardCornerRadius="4dp">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dip"
        android:id="@+id/user_mode_layout">


        <TextView
            android:id="@+id/tv_user_mode_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Example application"
            android:textStyle="bold"
            android:textColor="@color/appliance_name_header"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


        <com.rollingdice.deft.android.tab.user.SwitchCompactAir
            android:id="@+id/user_mode_toggle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn=""
            android:textOff=""
            android:background="@color/transparent"
            android:button="@drawable/device_switch"
            android:layout_below="@+id/tv_user_mode_name"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Name"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/appliance_name_header"
            android:textSize="15dp"
            android:id="@+id/tv_mode_room_name"
            android:layout_below="@+id/user_mode_toggle_btn"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appliances Added In Mood"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/appliance_name_header"
            android:textSize="13dp"
            android:id="@+id/tv_appliances_added"
            android:layout_below="@+id/tv_mode_room_name"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>
