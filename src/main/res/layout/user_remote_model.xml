<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:id="@+id/card_view_user_remote"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        tools:cardUseCompatPadding="true"
        tools:cardPreventCornerOverlap="false"
        android:background="@drawable/card_edge"
        card_view:cardBackgroundColor="@color/card_background_theme"
        card_view:cardCornerRadius="4dp">

    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/user_remote_layout">

        <ImageView
            android:id="@+id/remote_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Appliance Type"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/textColorPrimary"
            android:id="@+id/txt_applianceName"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Room Name"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/textColorPrimary"
            android:id="@+id/txt_RoomName"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Remote Id"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/textColorPrimary"
            android:id="@+id/txt_RemoteId"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Remote Brand"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/home_card_green"
            android:id="@+id/txt_Remote_Brand"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
