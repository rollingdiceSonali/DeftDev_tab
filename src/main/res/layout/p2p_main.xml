<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/p2ptoolbar"
        style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
        android:layout_height="wrap_content"
        android:layout_width="829dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <fragment
            class="com.rollingdice.deft.android.tab.P2P.DeviceListFragment"
            android:id="@+id/frag_list"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <!-- Preview: layout=@layout/row_devices -->
        </fragment>
        <fragment
            class="com.rollingdice.deft.android.tab.P2P.DeviceDetailFragment"
            android:id="@+id/frag_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Preview: layout=@layout/device_detail -->
        </fragment>

    </LinearLayout>
</LinearLayout>