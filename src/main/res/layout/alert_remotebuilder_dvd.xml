<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:text="DVD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/remote_IR_id"
        android:layout_marginTop="20dp"
        android:textSize="20dp"

        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="120dp"
        android:id="@+id/top_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/dvd_power_on"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:padding="2dp"
            android:text="Power ON"
            android:tag="00"
            />
        <Button

            android:id="@+id/dvd_power_off"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:padding="2dp"
            android:text="Replay/Usb"
            android:tag="01"
            />


        <Button
            android:id="@+id/dvd_open_btn"
            android:layout_toRightOf="@+id/univ_btn_btn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:padding="2dp"
            android:text="Open/Close"
            android:tag="02"
            />

    </LinearLayout>

    <RelativeLayout
        android:padding="5dp"
        android:layout_below="@+id/top_layout"
        android:id="@+id/remote_circle"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/remote_circle">

        <Button
            android:id="@+id/dvd_select_btn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circular_btn"
            android:padding="1dp"
            android:text="Select"
            android:textColor="#FFFFFF"
            android:tag="03"/>
        <ImageButton
            android:id="@+id/dvd_left_arrow_btn"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/select_btn"
            android:background="@drawable/ic_arrow_left_black"
            android:padding="2dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:tag="04"/>

        <ImageButton
            android:id="@+id/dvd_right_arrow_btn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/select_btn"
            android:background="@drawable/ic_arrow_right_black"
            android:padding="2dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:tag="05"/>

        <ImageButton
            android:id="@+id/dvd_up_arrow_btn"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/select_btn"
            android:background="@drawable/ic_keyboard_arrow_up"
            android:padding="2dp"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:tag="06"/>

        <ImageButton
            android:id="@+id/dvd_down_arrow_btn"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/select_btn"
            android:background="@drawable/ic_keyboard_arrow_down"
            android:padding="2dp"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:tag="07"/>
    </RelativeLayout>

    <Button
        android:id="@+id/dvd_menu_btn_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:tag="08"
        android:layout_below="@+id/dvd_volume_minus_btn"
        android:layout_toEndOf="@+id/dvd_back_btn" />
    <Button
        android:id="@+id/dvd_volume_minus_btn"
        android:text="Reverse"
        android:layout_alignBottom="@+id/remote_circle"
        android:layout_toLeftOf="@+id/remote_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="30dp"
        android:tag="09"/>

    <Button
        android:text="Forward"
        android:id="@+id/dvd_volume_plus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="10"
        android:layout_above="@+id/dvd_volume_minus_btn"
        android:layout_toStartOf="@+id/remote_circle" />


    <Button
        android:text="Play"
        android:id="@+id/dvd_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:tag="11"
        android:layout_alignTop="@+id/dvd_volume_plus_btn"
        android:layout_toEndOf="@+id/remote_circle" />

    <Button
        android:text="Stop"
        android:id="@+id/dvd_stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="12"
        android:layout_below="@+id/dvd_play_btn"
        android:layout_toEndOf="@+id/remote_circle" />

    <Button
        android:id="@+id/dvd_back_btn"
        android:text="Previous"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="13"
        android:layout_below="@+id/remote_circle"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/dvd_options_btn"
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="14"
        android:layout_below="@+id/dvd_volume_minus_btn"
        android:layout_toStartOf="@+id/dvd_back_btn" />


  <!--  <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:padding="2dp"
        android:text="Confirm"
        android:tag="15"
        android:layout_below="@+id/dvd_back_btn"
        android:layout_alignStart="@+id/dvd_back_btn" />-->



