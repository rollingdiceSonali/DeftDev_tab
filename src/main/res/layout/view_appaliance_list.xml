<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:background="@drawable/back"
    card_view:cardBackgroundColor="@color/card_background_theme"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/appliance_name"
        android:text="Appliance Name"
        android:textSize="25dp"
        android:id="@+id/appliance_name"
        android:paddingLeft="15dp"
        android:layout_alignTop="@+id/app_start_time"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/appliance_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Start Time"
        android:textSize="25dp"
        android:id="@+id/app_start_time"
        android:layout_marginStart="35dp"
        android:layout_alignTop="@+id/txt_day"
        android:layout_toEndOf="@+id/txt_day" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/appliance_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="End Time"
        android:textSize="25dp"
        android:id="@+id/app_end_Time"
        android:layout_alignTop="@+id/app_start_time"
        android:layout_marginLeft="50dp"
        android:layout_alignParentEnd="true"
        android:paddingRight="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/appliance_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Monday"
            android:textSize="25dp"
            android:id="@+id/txt_day"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/appliance_name"
            android:layout_marginStart="24dp" />

    </LinearLayout>
</android.support.v7.widget.CardView>