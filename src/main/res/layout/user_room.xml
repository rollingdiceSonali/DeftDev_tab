<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_room"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    card_view:cardBackgroundColor="@color/card_background_theme"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/user_room_icon"
            android:layout_width="700dp"
            android:layout_height="match_parent"
            android:transitionName="animation"
            android:src="@drawable/background_bedroom" />

       <TextView
            style="@style/HomeTextViewHeaderTop"
            android:id="@+id/tv_user_room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:ellipsize="marquee"
            android:gravity="center_horizontal|top"
            android:textSize="18dp"
            android:text="RoomName"
           android:layout_alignParentTop="true"
           android:layout_alignParentStart="true" />
       <TextView

            android:id="@+id/tv_user_room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Type"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="10sp"
           style="@style/HomeTextViewHeaderTop"
           android:layout_below="@+id/tv_user_room_name"
           android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/HomeTextViewHeaderTop"
            android:text="Last Motion Detected :"
            android:id="@+id/tv_last_motion_detected"
            android:textSize="10dp"
            android:visibility="visible"
            android:layout_marginStart="72dp"
            android:layout_alignTop="@+id/tv_last_motion_detected_at"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/HomeTextViewHeaderTop"
            android:text=""
            android:id="@+id/tv_last_motion_detected_at"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            android:visibility="visible"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/tv_last_motion_detected" />

        <!--<TextView
           android:id="@+id/tv_user_room_type"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:singleLine="true"
           android:textStyle="bold"
           android:text="RoomType"
           android:textColor="@color/appliance_name_sub_header"
           android:textSize="18sp"
            android:layout_below="@+id/tv_user_room_name" /> -->

    </RelativeLayout>

</android.support.v7.widget.CardView>